{
  "application": {
    "name": "my-app",
    "version": "1.0.0",
    "environment": "production"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 3000,
    "ssl": {
      "enabled": true,
      "certificate": "/path/to/cert.pem"
    }
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "mydb",
    "credentials": {
      "username": "admin",
      "password": "secret"
    },
    "pool": {
      "min": 2,
      "max": 10
    }
  },
  "features": {
    "caching": {
      "enabled": true,
      "ttl": 3600
    },
    "rateLimit": {
      "enabled": true,
      "requests": 100
    }
  }
}
